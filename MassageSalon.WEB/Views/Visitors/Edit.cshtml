@model VisitorModel

@using (Html.BeginForm("Edit", "Visitors", FormMethod.Post))
{
    

    <div>
        @Html.ValidationSummary()
    </div>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" type="text" asp-for="Name" />
        <span class="alert-danger" asp-validation-for="Name" />
    </div>
    <div class="form-group">
        <label asp-for="Surname"></label>
        <input class="form-control" type="text" asp-for="Surname" />
    </div>
    <div class="form-group">
        <label asp-for="FatherName"></label>
        <input class="form-control" type="text" asp-for="FatherName" />
    </div>
    <div class="form-group">
        <label asp-for="Masseur"></label>
        <input class="form-control" type="text" asp-for="Masseur" />
    </div>
    <div class="form-group">
        <label asp-for="MasseurId"></label>
        <input class="form-control" type="text" asp-for="MasseurId" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Save</button>
    </div>
}