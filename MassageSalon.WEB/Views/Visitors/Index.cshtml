@model IEnumerable<VisitorModel>
@{
    ViewData["Title"] = "Visitors";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <title>Responses</title>
</head>
<body>
    <div class="btn-group">
        <a id="createEditVisitor" asp-action="Edit" class="btn btn-primary">
            <i class="glyphicon glyphicon-plus"></i> Add Visitor
        </a>
    </div>
    <div class="panel-body">
        <h2>Visitors</h2>
        <table class="table table-sm table-striped table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>FatherName</th>
                    <th>Masseur</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (MassageSalon.WEB.Models.VisitorModel r in Model)
                {
                    <tr>
                        <td>@r.Name</td>
                        <td>@r.Surname</td>
                        <td>@r.FatherName</td>
                        <td>
                            <a id="createEditVisitor" asp-action="Edit" asp-route-id="@r.Id"
                               class="btn btn-info">
                                <i class="glyphicon glyphicon-pencil"></i>  Edit
                            </a>
                            <form asp-action="Delete" asp-route-id="@r.Id" method="post">
                                <button type="submit" class="btn btn-info">
                                    Delete
                                </button>
                            </form>
                        </td>      
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>